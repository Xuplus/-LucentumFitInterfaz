<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="lucentum.com.Perfil"
    android:background="#64B5F6"
    android:fontFamily="sans-serif-light">


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView8"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_create_black_48dp_2x"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="EditarPerfil"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_txtPerfil"
        android:layout_marginBottom="35dp"
        android:layout_below="@+id/imageView8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Perfil"
            android:id="@+id/txt_Perfil"
            android:textSize="50dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_fotoPerfil"
        android:layout_below="@+id/ll_txtPerfil"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv_fotoPerfil"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sin definir"
            android:id="@+id/tv_inUsuario_perfil"
            android:textStyle="bold"
            android:fontFamily="sans-serif-bold"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_datosPerfil"
        android:layout_below="@+id/ll_fotoPerfil"
        android:layout_marginTop="40dp"
        android:background="@drawable/myedittext">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nombre: "
                android:id="@+id/tv_nombre_perfil"
                android:textStyle="bold"
                android:fontFamily="sans-serif-bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sin definir"
                android:id="@+id/tv_inNombre"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>

        <LinearLayout
